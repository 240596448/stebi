сценарийОПриложении = ОбъединитьПути(ТекущийСценарий().Каталог, "src", "Модули", "ОПриложении.os");
оПриложении = ЗагрузитьСценарий(сценарийОПриложении);

Описание.Имя(оПриложении.Имя())
		.Версия(оПриложении.Версия())
		.ВерсияСреды("1.1")
		.ЗависитОт("cli")
		.ЗависитОт("logos")
		.ЗависитОт("v8metadata-reader")
		.ЗависитОт("csv")
		.ВключитьФайл("packagedef")
		.ВключитьФайл("readme.md")
		.ВключитьФайл("LICENSE")
		.ВключитьФайл("src")
		.ВключитьФайл("dict")
		.ИсполняемыйФайл("src/main.os");